<div class="w-full max-h-screen">
  <div class="bg-white rounded-3xl p-8 mb-5">
    <h1 class="text-3xl font-bold mb-10">Bem vindo, <%= current_user.name %></h1>
    <hr class="my-10">
    <div class="flex space-x-5 items-center justify-center">
      <div class="bg-red-100 w-1/6 text-center rounded-lg h-full p-2 py-5 shadow-lg transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 hover:bg-red-500 duration-300">
        <h1>Residentes</h1>
        <p class="text-2xl font-bold"><%= Animal.count %></p>
      </div>
      <div class="bg-red-100 w-1/6 text-center rounded-lg h-full p-2 py-5 shadow-lg transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 hover:bg-red-500 duration-300">
        <h1>Caixa</h1>
        <p class="text-2xl font-bold">1.000 R$</p>
      </div>
      <div class="bg-red-100 w-1/6 text-center rounded-lg h-full p-2 py-5 shadow-lg transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 hover:bg-red-500 duration-300">
        <h1>Doentes</h1>
        <p class="text-2xl font-bold">0</p>
      </div>
      <div class="bg-red-100 w-1/6 text-center rounded-lg h-full p-2 py-9 shadow-lg transition ease-in-out delay-50 hover:-translate-y-1 hover:scale-110 hover:bg-red-500 duration-300">
        <h1 class="font-bold">Agenda</h1>
      </div>
    </div>
    <hr class="my-10">
    <div class="grid grid-cols-2 gap-4">
      <div class="bg-green-300 h-full rounded-lg ">
          <%= render 'moneytab' %>
      </div>
       <div class="bg-green-300 h-36 rounded-lg">
      </div>
    </div>
  </div>
</div>
